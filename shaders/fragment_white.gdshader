shader_type canvas_item;

const vec4 white = vec4(1.0, 1.0, 1.0, 1.0);
uniform vec4 flash_color: source_color = vec4(1.0f);
uniform float flash_pct: hint_range(0.0, 1.0) = 0.0f;

void fragment() {
	vec4 sprite_color = texture(TEXTURE, UV);

	vec4 mixed_color = mix(sprite_color, flash_color, flash_pct);

	if (sprite_color.a > 0.0)
	{
		COLOR = mixed_color;
	}
	else
	{
		COLOR.a = 0.0;
	}
}

